<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Comments - DailyScribe</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap JS and Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/styles/main.css">
</head>

<body>
    <div class="d-flex flex-column w-100 h-100">

        <% if(typeof error !== 'undefined'){ %>
            <%- include('./partials/errorMsg') %>
        <% } %>
        <% if(typeof success !== 'undefined'){ %>
            <%- include('./partials/successMsg') %>
        <% } %>

        <%- include('partials/header') %>
            <main class="container h-80 d-flex flex-column justify-content-center overflow-auto">
                    <% if (comments.length > 0) { %>
                    
                        <div class="card h-80">
                            <div class="card-header">
                                <h3 class="mb-0">My Comments</h3>
                            </div>
                            <div class="card-body">
                                <div class="row my-2">
                                    <% comments.forEach(comment=> { %>
                                        <div class="col-md-4 my-4">
                                            <%- include('./partials/comment/commentCard', { comment }) %>
                                        </div>
                                    <% }); %>
                                </div> 
                            </div>
                        </div>
                        
                    <% } else { %>
                                <p class="text-muted">You haven't created any comments yet.</p>
                    <% } %>
                
            </main>
            <%- include('partials/footer') %>
    </div>
</body>

</html>